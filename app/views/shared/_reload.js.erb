svg.clear();
svg.addNode("<%= @word.id %>", "<%= escape_javascript(@word.name) %>", "/home/index?id=<%= @word.id %>", "/assets/rails.png", "3");
<% for association in @associations %>
    svg.addNode("<%= association.association_id %>", "<%= escape_javascript(association.associated_word.name) %>", "/home/index?association_id=<%= association.association_id %>", "/assets/rails.png", <%= association.count -%>);
    svg.addLink("<%= association.association_id %>", "<%= @word.id %>", <%= association.count -%>);
<% end %>
<%# info_for_map(@word) %>
$("#throbber").hide();
svg.update();